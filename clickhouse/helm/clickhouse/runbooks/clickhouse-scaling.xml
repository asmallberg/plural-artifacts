          <valueFrom
            datasource="clickhouse-image-builder"
            doc="kubernetes.raw"
            path="spec.template.spec.containers[0].resources.limits.cpu" />
        </input>
        <input placeholder="1Gi" label='clickhouse Image Builder Memory Limit' name='clickhouse-image-builder-memory-limit'>
          <valueFrom
            datasource="clickhouse-image-builder"
            doc="kubernetes.raw"
            path="spec.template.spec.containers[0].resources.limits.memory" />
        </input>
      </box>
    </box>
  </box>
</root>
